    int solve(int a, int b, int c) {
        // code here
        if (a>(b+c)*2+2)
        return -1 ;
        else if (b>(a+c)*2+2)
        return -1;
        else if (c>(a+b)*2+2)
        return -1;
        else return a+b+c;
    }
